{
  "name": "diaspomoney",
  "description": "Diaspomoney is a platform that allows you to find and book services in Africa.",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:unit": "vitest test/unit",
    "test:integration": "vitest test/integration",
    "test:security": "vitest test/security",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "docs:dev": "next dev --port 3001",
    "docs:build": "next build && next export -o docs-build",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit && npm audit fix",
    "security:check": "npm run security:audit && npm run test:security",
    "quality:check": "npm run lint && npm run type-check && npm run test:coverage",
    "pre-commit": "npm run quality:check"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@next-auth/mongodb-adapter": "^1.1.3",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.1",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.511.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.0",
    "next": "15.3.0",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.58.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.5",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
