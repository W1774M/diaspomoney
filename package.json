{
  "name": "diaspomoney",
  "description": "Diaspomoney is a platform that allows you to find and book services in Africa.",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:unit": "vitest test/unit",
    "test:integration": "vitest test/integration",
    "test:security": "vitest test/security",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "docs:dev": "next dev --port 3001",
    "docs:build": "next build && next export -o docs-build",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit && npm audit fix",
    "security:check": "npm run security:audit && npm run test:security",
    "quality:check": "npm run lint && npm run test:run",
    "pre-commit": "npm run quality:check",
    "clean": "rm -rf .next out dist",
    "docker:build": "docker build -t diaspomoney .",
    "docker:run": "docker run -p 3000:3000 diaspomoney",
    "check-imports": "tsx scripts/check-imports.ts",
    "post-install": "npm run check-imports",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean-install": "bash scripts/clean-install.sh",
    "fix-deps": "bash scripts/fix-dependencies.sh",
    "fix-deps:win": "powershell -ExecutionPolicy Bypass -File scripts/fix-dependencies.ps1"
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^2.0.0",
    "@hookform/resolvers": "^5.1.1",
    "@react-email/components": "^0.0.15",
    "@sentry/nextjs": "^10.15.0",
    "@tailwindcss/postcss": "^4.1.10",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.1",
    "framer-motion": "^12.18.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.0",
    "nanoid": "^5.0.0",
    "next": "15.3.0",
    "nodemailer": "^7.0.4",
    "rate-limiter-flexible": "^4.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^2.1.0",
    "react-hook-form": "^7.58.0",
    "resend": "^3.0.0",
    "sharp": "^0.33.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.7",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.5",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
